{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",

        "strict": true,
        "strictFunctionTypes": true,

        "declaration": true,
        "declarationDir": ".",

        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    
    "exclude": [
        "node_modules"
    ],

    "include": [
        "./declare/**/*.d.ts",
        "./src/**/*.ts"
    ]
}