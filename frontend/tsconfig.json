{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",

        "allowSyntheticDefaultImports": true,
        
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,

        "outDir": "dist",
        "sourceMap": true,

        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*",
                "../*"
            ]
        }
    },
    
    "exclude": [
        "node_modules"
    ],

    "include": [
        "./declare/**/*.d.ts",
        "./src/**/*.ts",
        "./src.*/**/*.ts"
    ]
}