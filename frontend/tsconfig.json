{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",

        "experimentalDecorators": true,
        
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "strictNullChecks": true,

        "outDir": "build/tsc",

        "baseUrl": ".",
        
        "paths": {
            "this": ["src"],
            "@/*": ["src/*"]
        }
    },
    
    "exclude": [
        "node_modules"
    ],

    "include": [
        "./declare/**/*.d.ts",
        "./src/**/*.ts"
    ]
}