{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",

        "allowSyntheticDefaultImports": true,
        
        "strict": true,
        "strictFunctionTypes": true,

        "outDir": "dist",
        "sourceMap": true,

        "baseUrl": ".",
        "paths": {
            "@/*": [ "src/*" ],
            "@common/*": [ "../common/*" ]
        }
    },
    
    "exclude": [
        "node_modules"
    ],

    "include": [
        "./declare/**/*.d.ts",
        "./src/**/*.ts",
        "./src.*/**/*.ts"
    ]
}