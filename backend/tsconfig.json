{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",

        "allowSyntheticDefaultImports": true,
        
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,

        "outDir": "dist",
        "sourceMap": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/common/*": ["../common/*"]
        }
    },
    
    "exclude": [
        "node_modules"
    ],

    "include": [
        "./declare/**/*.d.ts",
        "./src/**/*.ts"
    ]
}