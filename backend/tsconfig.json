    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",

        "strict": true,
        "strictFunctionTypes": true,

        "outDir": "dist",
        "sourceMap": true
    },
    
    "exclude": [
        "node_modules"
    ],

    "include": [
        "./declare/**/*.d.ts",
        "./src/**/*.ts",
        "./test/**/*.ts"
    ]
}